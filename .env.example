# App
APP_NAME=FastAPI Template
DEBUG=false
VERSION=0.1.0

# Database
DATABASE_URL=sqlite:///./app.db

# Auth
AUTH_BACKEND=jwt  # jwt | firebase | supabase
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API - TMAP (https://openapi.sk.com)
# TMAP_APP_KEY=your-tmap-app-key

# Firebase Auth (AUTH_BACKEND=firebase일 때)
# FIREBASE_CREDENTIALS=/path/to/credentials.json

# Supabase (AUTH_BACKEND=supabase 또는 STORAGE_BACKEND=supabase일 때)
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_KEY=your-supabase-key

# Storage (선택)
# STORAGE_BACKEND=s3  # s3 | r2 | supabase

# AWS S3 (STORAGE_BACKEND=s3일 때)
# S3_BUCKET=my-bucket
# S3_REGION=ap-northeast-2
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# Cloudflare R2 (STORAGE_BACKEND=r2일 때)
# R2_BUCKET=my-bucket
# R2_ACCOUNT_ID=your-account-id
# R2_ACCESS_KEY=your-access-key
# R2_SECRET_KEY=your-secret-key

# Supabase Storage (STORAGE_BACKEND=supabase일 때)
# SUPABASE_STORAGE_BUCKET=my-bucket

# Cache (선택)
# CACHE_BACKEND=upstash  # redis | upstash

# Redis (CACHE_BACKEND=redis일 때)
# REDIS_URL=redis://localhost:6379/0

# Upstash Redis (CACHE_BACKEND=upstash일 때)
# UPSTASH_REDIS_URL=https://xxx.upstash.io
# UPSTASH_REDIS_TOKEN=your-token
