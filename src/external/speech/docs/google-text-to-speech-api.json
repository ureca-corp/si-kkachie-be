        {"name": "en-US-Standard-D", "gender": "MALE"},
        {"name": "en-US-Standard-E", "gender": "FEMALE"}
      ],
      "wavenet": [
        {"name": "en-US-Wavenet-A", "gender": "MALE"},
        {"name": "en-US-Wavenet-B", "gender": "MALE"},
