  },
  "x-output-formats": {
    "MP3": {
      "mime_type": "audio/mpeg",
      "notes": "Most compatible, smaller file size"
    },
    "LINEAR16": {
      "mime_type": "audio/wav",
      "notes": "Uncompressed, highest quality"
    },
    "OGG_OPUS": {
      "mime_type": "audio/ogg",
      "notes": "Good quality, smaller size, web-friendly"
    }
  },
