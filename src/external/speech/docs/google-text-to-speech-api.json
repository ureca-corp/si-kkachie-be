{
  "openapi": "3.0.0",
  "info": {
    "title": "Google Cloud Text-to-Speech API",
    "version": "1.0.0",
    "description": "Google Cloud Text-to-Speech API for speech synthesis (Korean/English)"
  },
  "servers": [
    {
      "url": "https://texttospeech.googleapis.com/v1",
      "description": "Google Cloud Text-to-Speech API v1"
    }
  ],
  "components": {
    "schemas": {
      "SynthesisInput": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Plain text input"
          },
          "ssml": {
            "type": "string",
            "description": "SSML input for advanced control"
          }
        }
      },
      "VoiceSelectionParams": {
        "type": "object",
        "properties": {
          "language_code": {
            "type": "string",
            "enum": ["ko-KR", "en-US"],
            "description": "Language code"
          },
          "name": {
            "type": "string",
            "description": "Voice name (e.g., ko-KR-Standard-A)"
          },
          "ssml_gender": {
            "type": "string",
            "enum": ["NEUTRAL", "MALE", "FEMALE"],
            "description": "Voice gender"
          }
        },
        "required": ["language_code"]
      },
      "AudioConfig": {
        "type": "object",
        "properties": {
          "audio_encoding": {
            "type": "string",
            "enum": ["LINEAR16", "MP3", "OGG_OPUS", "MULAW", "ALAW"],
            "description": "Output audio encoding"
          },
          "speaking_rate": {
            "type": "number",
            "minimum": 0.25,
            "maximum": 4.0,
            "default": 1.0,
            "description": "Speaking rate (1.0 = normal speed)"
          },
          "pitch": {
            "type": "number",
            "minimum": -20.0,
            "maximum": 20.0,
            "default": 0.0,
            "description": "Pitch adjustment in semitones"
          },
          "volume_gain_db": {
            "type": "number",
            "minimum": -96.0,
            "maximum": 16.0,
            "default": 0.0,
            "description": "Volume gain in dB"
          },
          "sample_rate_hertz": {
            "type": "integer",
            "description": "Output sample rate (default varies by encoding)"
          }
        },
        "required": ["audio_encoding"]
      },
      "SynthesizeSpeechResponse": {
        "type": "object",
        "properties": {
          "audio_content": {
            "type": "string",
            "format": "byte",
            "description": "Base64-encoded audio data"
          }
        }
      }
    }
  },
  "x-python-sdk": {
    "package": "google-cloud-texttospeech",
    "version": ">=2.0.0",
    "installation": "uv add google-cloud-texttospeech",
    "initialization": {
      "description": "Initialize Text-to-Speech client",
      "code": "from google.cloud import texttospeech\n\nclient = texttospeech.TextToSpeechClient()"
    },
    "methods": {
      "synthesize_speech": {
        "description": "Synthesize speech from text",
        "example": "from google.cloud import texttospeech\n\nclient = texttospeech.TextToSpeechClient()\n\n# Set the text input\nsynthesis_input = texttospeech.SynthesisInput(text='안녕하세요, 반갑습니다.')\n\n# Build the voice request\nvoice = texttospeech.VoiceSelectionParams(\n    language_code='ko-KR',\n    ssml_gender=texttospeech.SsmlVoiceGender.FEMALE\n)\n\n# Select the audio format\naudio_config = texttospeech.AudioConfig(\n    audio_encoding=texttospeech.AudioEncoding.MP3\n)\n\n# Perform the synthesis\nresponse = client.synthesize_speech(\n    input=synthesis_input,\n    voice=voice,\n    audio_config=audio_config\n)\n\n# Save the audio\nwith open('output.mp3', 'wb') as out:\n    out.write(response.audio_content)"
      },
      "list_voices": {
        "description": "List available voices for a language",
        "example": "voices = client.list_voices(language_code='ko-KR')\nfor voice in voices.voices:\n    print(f'{voice.name}: {voice.ssml_gender.name}')"
      }
    }
  },
