{
  "extraKnownMarketplaces": {
    "kkachie-local": {
      "source": {
        "source": "directory",
        "path": "./.claude/plugins/render-autofix"
      }
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/on-file-modified.sh"
          }
        ]
      }
    ]
  }
}
